<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jmframework.boot.jmspringbootstarter.mapper.RoleMapper">
    <sql id="Base_Column_List">
            id,
            `name`,
            description,
            gmt_created,
            gmt_modified
    </sql>

    <resultMap id="BaseResultMap" type="com.jmframework.boot.jmspringbootstarterdomain.role.persistence.RolePO">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT tr.id,
               tr.name,
               tr.description,
               tr.gmt_created,
               tr.gmt_modified
        FROM t_role tr
                 LEFT JOIN t_user_role tur ON tr.id = tur.role_id
                 LEFT JOIN t_user tu ON tur.user_id = tu.id
        WHERE tu.id = #{userId}
    </select>

    <select id="selectPageList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_role
    </select>

    <select id="checkRoleName" resultType="java.lang.Integer">
        SELECT count(1)
        FROM t_role
        <where>
            <if test="id != null">
                id != #{id} AND name = #{name}
            </if>
            <if test="id == null">
                AND name = #{name}
            </if>
        </where>
    </select>

    <insert id="insertRole" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_role(name, description, gmt_created, gmt_modified)
        VALUES (#{name}, #{description}, now(), now())
    </insert>

    <select id="selectRoleByName" resultMap="BaseResultMap">
        SELECT id,
               name,
               description,
               gmt_created,
               gmt_modified
        FROM t_role
        WHERE name = #{name}
    </select>

    <update id="updateRoleById">
        UPDATE t_role
        SET name         = #{name},
            description  = #{description},
            gmt_modified = now()
        WHERE id = #{id}
    </update>
</mapper>
